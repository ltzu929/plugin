{
  "name": "bilibili-danmaku-analyzer",
  "version": "1.0.0",
  "description": "智能B站视频弹幕分析工具，支持弹幕密度分析、热门弹幕识别、多维度数据筛选",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"vite\"",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "server": "node api/server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "electron:dev": "concurrently \"npm run server\" \"vite\" \"electron .\"",
    "electron:build": "vite build && electron-builder -w nsis"
  },
  "keywords": [
    "bilibili",
    "danmaku",
    "弹幕分析",
    "数据可视化",
    "React",
    "TypeScript",
    "Vite",
    "Tailwind CSS"
  ],
  "author": "Your Name <your-email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/bilibili-danmaku-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/bilibili-danmaku-analyzer/issues"
  },
  "homepage": "https://github.com/your-username/bilibili-danmaku-analyzer#readme",
  "type": "module",
  "main": "electron/main.cjs",
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lucide-react": "^0.263.1",
    "node-cron": "^4.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7",
    "tailwind-merge": "^3.4.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.14",
    "babel-plugin-react-dev-locator": "^1.0.6",
    "concurrently": "^8.2.0",
    "eslint": "^8.50.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.2.2",
    "vite": "^5.4.1",
    "vite-plugin-trae-solo-badge": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^0.34.6",
    "electron": "28.2.3",
    "electron-builder": "24.6.4",
    "electron-updater": "6.1.8"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "build": {
    "appId": "com.example.bilibili.danmaku",
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ltzu929",
        "repo": "bilibili-xml"
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
